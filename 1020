import java.util.Scanner;
public class Main {

	public static void main(String[] args) {
	
	Scanner sc = new Scanner(System.in);
	
	int periodo, anos, meses, dias, resto;
	
	System.out.println("Digite um per√≠odo em dias: ");
	
	periodo = sc.nextInt();
	
	anos = periodo / 365;
	resto = periodo % 365;
	
	meses = resto / 30;
	dias = resto % 30;
	
	System.out.println(anos + " Anos, " + meses + " meses e " + dias + " dias.");
	
	sc.close();
		
	}

}
